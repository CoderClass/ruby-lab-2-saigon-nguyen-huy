<section class="header-11-sub">
  <div class="background">&nbsp;</div>
  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        <h3>The Dating Site for Ruby Experts</h3>
        <p>CoderDating is the first dating website just for experienced Ruby on Rails engineers.</p>
        <div class="signup-form">
          <%= form_tag(sessions_path, :method => 'post') do %>
              <div class="form-group">
                <%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'Email' %>

              </div>
              <div class="form-group">
                <div class="half-width">
                  <%= password_field_tag 'password', nil, class: 'form-control', placeholder: 'Password' %>
                </div>
              </div>
              <div class="form-group">
                <%= submit_tag 'Sign In', class: 'btn btn-block btn-info' %>
              </div>
          <% end %>
        </div>
      </div>
      <div class="col-sm-7 col-sm-offset-1 player-wrapper">
        <div class="player">
          <%= image_tag 'hero' %>
        </div>
      </div>
    </div>
  </div>
</section>
